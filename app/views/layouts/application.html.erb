    {
      "@context": "http://schema.org",
      "@type": "WebSite",
      "id": "https://amazify.co/",
      "url": "https://amazify.co/",
      "about": "Amazify es una plataforma de contenido de emprendedores para emprendedores.",
      "name": "Amazify",
      "author": {
        "@type": "Organization",
        "id": "https://nochesdepitcheo.com/",
        "url": "https://nochesdepitcheo.com/",
        "name": "Noches de Pitcheo"
      }
    }
    </script>
  </head>
  <body>
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-MS8V9DV"
    height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
