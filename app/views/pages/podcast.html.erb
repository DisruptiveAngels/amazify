<main class="podcast-image">
	<%= image_tag @podcast.image %>
	<p>"We share content and ideas that matter, We share content and ideas that matter, We share content"</p>
</main>
<section class="container">
	<div class="podcast">
		<div class="navigator"></div>
		<h1><%= @podcast.title %></h1>
		<% @guests.each {|guest|
      guest_info = guest.split "." %>
      <h3 class="guest-name"><span><%= guest_info[0] %></span><br><%= guest_info[1] %></h3>
    <% } %>
		<p><%= @podcast.published %></p>
		<iframe width="100%" height="166" scrolling="no" frameborder="no" allow="autoplay" src="https://w.soundcloud.com/player/?url=<%= @podcast.audio_link %>&amp;color=%236377b8&amp;auto_play=false&amp;hide_related=true&amp;show_comments=true&amp;show_user=true&amp;show_reposts=true&amp;show_teaser=true"></iframe>
		<p><%= @podcast.text %></p>
	</div>
</section>
