<div class="page-header">
  <h1>Category</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Name:</strong></dt>
  <dd><%= @category.name %></dd>
</dl>

<%= link_to 'Back', categories_path, class: 'btn btn-default'  %>
<%= link_to 'Edit', edit_category_path(@category), class: 'btn btn-default' %>
<%= link_to 'Delete', category_path(@category), method: 'delete', data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
