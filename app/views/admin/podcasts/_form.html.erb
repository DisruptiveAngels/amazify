<%= form_for [:admin, @podcast], html: { class: "form-horizontal article" } do |f| %>

  <% if @podcast.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@podcast.errors.count, "error") %> prohibited this podcast from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @podcast.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :reading_time, class: 'control-label col-lg-2' %>
    <div class="col-lg-1">
      <%= f.number_field :reading_time, class: 'form-control' %>
    </div>
    <%= f.label :episode, class: 'control-label col-lg-1' %>
    <div class="col-lg-1">
      <%= f.number_field :episode, class: 'form-control' %>
    </div>
    <%= f.label :title, class: 'control-label col-lg-1' %>
    <div class="col-lg-6">
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <%=f.error_span(:reading_time) %>
    <%=f.error_span(:episode) %>
    <%=f.error_span(:title) %>
  </div>
  <div class="form-group">
    <%= f.label :published, class: 'control-label col-lg-2' %>
    <div class="col-lg-2">
      <%= f.date_field :published, class: 'form-control' %>
    </div>
    <%= f.label :guests, class: 'control-label col-lg-1' %>
    <div class="col-lg-7">
      <%= f.text_field :guests, class: 'form-control', placeholder: 'Nombre. Puesto de Empresa; Nombre. Puesto de Empresa; etc...' %>
    </div>
    <%=f.error_span(:published) %>
    <%=f.error_span(:guests) %>
  </div>
  <div class="form-group">
    <%= f.label :quote, class: 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :quote, class: 'form-control' %>
    </div>
    <%=f.error_span(:quote) %>
  </div>
  <div class="form-group">
    <%= f.label :video_link, class: 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :video_link, class: 'form-control' %>
    </div>
    <%=f.error_span(:video_link) %>
  </div>
  <div class="form-group">
    <%= f.label :audio_link, class: 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :audio_link, class: 'form-control' %>
    </div>
    <%=f.error_span(:audio_link) %>
  </div>
  <div class="form-group">
    <%= f.label :image, class: 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.file_field :image, class: 'form-control' %>
    </div>
    <%=f.error_span(:image) %>
  </div>
  <div class="form-group">
    <%= f.label :thumbnail, class: 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.file_field :thumbnail, class: 'form-control' %>
    </div>
    <%=f.error_span(:thumbnail) %>
  </div>
  <div class="form-group">
    <%= f.label :text, class: 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :text, class: 'form-control' %>
    </div>
    <%=f.error_span(:text) %>
  </div>
  <div class="form-group">
    <%= f.label :category_id, class: 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.collection_select :category_id, Category.all, :id, :name, {}, class: 'form-control' %>
    </div>
    <%=f.error_span(:category_id) %>
  </div>
  <div class="form-group">
    <%= f.label :tags, class: 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select :tags, Article.tags.keys {|tag, i| [tag, tag]}, {}, class: 'form-control' %>
    </div>
    <%=f.error_span(:tags) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, class: 'btn btn-primary' %>
      <%= link_to t('.cancel', default: t("helpers.links.cancel")),
                admin_podcasts_path, class: 'btn btn-default' %>
    </div>
  </div>

<% end %>
